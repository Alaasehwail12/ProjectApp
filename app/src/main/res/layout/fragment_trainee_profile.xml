<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TraineeProfile" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:background="#486367"
                android:backgroundTint="#F49AB9">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="222dp"
                    android:layout_height="166dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="104dp"
                    android:layout_marginBottom="54dp"
                    android:background="#F49AB9"
                    android:src="@drawable/user_phue" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="521dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="133dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/gmail" />

                    <TextView
                        android:id="@+id/email_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="E-mail"
                        android:inputType="textPersonName"
                        android:textSize="34sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagelast"
                        android:layout_width="133dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/userrrr" />

                    <TextView
                        android:id="@+id/fisrt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:textSize="34sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_last"
                        android:layout_width="133dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/userrrr" />

                    <TextView
                        android:id="@+id/last_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:textSize="34sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="133dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone_call" />

                    <TextView
                        android:id="@+id/phone_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Phone"
                        android:inputType="textPersonName"
                        android:textSize="34sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_address"
                        android:layout_width="133dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Address"
                        android:inputType="textPersonName"
                        android:textSize="34sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/edit_profile"
                style="@style/Widget.Material3.Button"
                android:layout_width="250dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#D720AF"
                android:text="Edit profile"
                android:textColorHighlight="#E91E63"
                android:textColorLink="#E91E63"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>