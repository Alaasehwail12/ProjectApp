<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminSignUpFragment"
    > <!-- Add the background color here -->


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="717dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/admin"
                android:layout_width="387dp"
                android:layout_height="133dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:src="@drawable/adminpic" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Let's get started!"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="please create an account to continue"
                android:textSize="20sp" />



            <EditText
                android:id="@+id/emialedit"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="E-mail"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/editfname"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="First Name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editlname"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="Last Name"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <EditText

                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/pass2"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="415dp"
                android:layout_height="135dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/photo"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D720AF"
                    android:text="Upload Photo"
                    android:textColorHighlight="#E91E63"
                    android:textColorLink="#E91E63"
                    android:textSize="15sp"
                    app:rippleColor="#BD5358" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="213dp"
                    android:layout_height="129dp"
                    android:layout_weight="1"
                    android:src="@drawable/upload" />

            </LinearLayout>



            <Button
                android:id="@+id/signupadmin"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#D720AF"
                android:text="SignUp"
                android:textColorHighlight="#E91E63"
                android:textColorLink="#E91E63"
                android:textSize="24sp"
                app:rippleColor="#BD5358" />



            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#CF0F0F"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/haveAnAccount" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>