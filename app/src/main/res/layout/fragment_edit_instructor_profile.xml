<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/address"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:baselineAligned="false"
android:orientation="vertical"
tools:context=".EditInstructorProfile">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/book" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Let's get started!"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Edit your Account..." />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:textColor="#857373"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="First Name"
                android:inputType="text"
                android:textColor="#857373"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Last Name"
                android:inputType="text"
                android:textColor="#857373" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:layout_width="223dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#857373" />

            <EditText
                android:id="@+id/cpassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="20sp"
                android:hint="ConfirmPassword"
                android:inputType="textPassword"
                android:textColor="#857373" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phone"
                android:layout_width="200dp"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColor="#857373"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:textColor="#857373" />
        </LinearLayout>

        <EditText
            android:id="@+id/specialliaztion"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:textSize="20sp"
            android:hint="Specialization"
            android:inputType="text"
            android:textColor="#857373" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:text="Degree"
                android:textSize="20sp"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="277dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextText11"
                android:layout_width="196dp"
                android:layout_height="65dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="List of Courses"
                android:inputType="text"
                android:textColor="#857373"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#D720AF"
                android:text="Upload Photo"
                android:textColorHighlight="#E91E63"
                android:textColorLink="#E91E63"
                android:textSize="20sp"
                app:rippleColor="#BD5358" />

            <ImageView
                android:id="@+id/imageupload1"
                android:layout_width="250dp"
                android:layout_height="93dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/upload" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"

            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_profile"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#D720AF"
                android:text="Save"
                android:textColorHighlight="#E91E63"
                android:textColorLink="#E91E63"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cancle"
                style="@style/Widget.Material3.Button"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#D720AF"
                android:text="Cancel"
                android:textColorHighlight="#E91E63"
                android:textColorLink="#E91E63"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/error1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textColor="#CF0F0F"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/haveAnAccount" />



    </LinearLayout>

</ScrollView>
</LinearLayout>