<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EdittraineeProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageV10"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:src="@drawable/traniee" />

            <TextView
                android:id="@+id/textV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Let's get started!"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textV"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:gravity="center"
                android:text="please create an account to continue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editT"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:textColor="#857373"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ft1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="First Name"
                    android:textColor="#857373"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/lt2"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Last Name"
                    android:textColor="#857373"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/passt2"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#857373"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/confirmptext2"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="ConfirmPassword"
                    android:inputType="textPassword"
                    android:textColor="#857373"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mobiltext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Phone"
                    android:textSize="20sp"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/addresstext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColor="#857373"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/photoButton2"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="211dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D720AF"
                    android:text="Upload Photo"
                    android:textColorHighlight="#E91E63"
                    android:textColorLink="#E91E63"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/saved_image"
                    android:layout_width="205dp"
                    android:layout_height="107dp"
                    android:layout_weight="1"
                    android:src="@drawable/upload" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"

                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save_profile"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#D720AF"
                    android:text="Save"
                    android:textColorHighlight="#E91E63"
                    android:textColorLink="#E91E63"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cancle"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#D720AF"
                    android:text="Cancel"
                    android:textColorHighlight="#E91E63"
                    android:textColorLink="#E91E63"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/error2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#CF0F0F"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>